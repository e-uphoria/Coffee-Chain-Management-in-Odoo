<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Root menu -->
    <menuitem id="menu_cafe_mrp_root" name="Cafe Manufacturing"/>

    <!-- Cafe BoM -->
    <menuitem id="menu_cafe_bom" name="Recipes (BoM)" parent="menu_cafe_mrp_root"/>
    <record id="action_cafe_bom" model="ir.actions.act_window">
        <field name="name">Recipes (BoM)</field>
        <field name="res_model">cafe.bom</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_cafe_bom_action"
              parent="menu_cafe_bom"
              action="action_cafe_bom"/>

    <!-- Manufacturing Orders -->
    <menuitem id="menu_cafe_mo" name="Manufacturing Orders" parent="menu_cafe_mrp_root"/>
    <record id="action_cafe_mo" model="ir.actions.act_window">
        <field name="name">Manufacturing Orders</field>
        <field name="res_model">cafe.manufacturing.order</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_cafe_mo_action"
              parent="menu_cafe_mo"
              action="action_cafe_mo"/>

    <!-- Cafe Products -->
    <menuitem id="menu_cafe_product_root" name="Cafe Products"/>
    <record id="action_cafe_product" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">cafe.product</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_cafe_product"
              name="Products"
              parent="cafe_inventory.menu_cafe_inventory"
              action="action_cafe_product"/>
  </data>
</odoo>
