<odoo>
  <record id="view_cafe_batch_list" model="ir.ui.view">
    <field name="name">cafe.batch.list</field>
    <field name="model">cafe.batch</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="product_id"/>
        <field name="qty"/>
        <!-- <field name="uom_id"/> -->
        <field name="outlet_id"/>
        <field name="expiry_date"/>
        <field name="is_expired"/>
      </list>
    </field>
  </record>

  <record id="view_cafe_batch_form" model="ir.ui.view">
    <field name="name">cafe.batch.form</field>
    <field name="model">cafe.batch</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="product_id"/>
            <field name="qty"/>
            <!-- <field name="uom_id" readonly="1"/> -->
            <field name="outlet_id"/>
            <field name="expiry_date"/>
            <field name="is_expired" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action -->
  <record id="action_cafe_batch" model="ir.actions.act_window">
    <field name="name">Batches</field>
    <field name="res_model">cafe.batch</field>
    <field name="view_mode">list,form</field>
    <!-- <field name="view_id" ref="view_cafe_batch_list"/> -->
  </record>

  <!-- Menus -->
  <menuitem id="menu_cafe_inventory"
            name="Inventory"
            sequence="2"/>

  <menuitem id="menu_cafe_batch"
            name="Batches"
            parent="menu_cafe_inventory"
            action="action_cafe_batch"/>

  <!-- Groups -->
  <record id="group_cafe_inventory_user" model="res.groups">
    <field name="name">Cafe Inventory User</field>
    <field name="category_id" ref="base.module_category_inventory"/>
  </record>

  <record id="group_cafe_inventory_manager" model="res.groups">
    <field name="name">Cafe Inventory Manager</field>
    <field name="category_id" ref="base.module_category_inventory"/>
  </record>
  
  <record id="access_cafe_batch_manager" model="ir.model.access">
    <field name="name">Cafe Batch Manager</field>
    <field name="model_id" ref="model_cafe_batch"/>
    <field name="group_id" ref="group_cafe_inventory_manager"/>
    <field name="perm_read" eval="1"/>
    <field name="perm_write" eval="1"/>
    <field name="perm_create" eval="1"/>
    <field name="perm_unlink" eval="1"/>
  </record>

  <!-- Record Rule Example: Users can only see batches in their outlet -->
  <record id="cafe_batch_user_outlet_rule" model="ir.rule">
    <field name="name">Cafe Batch: My Outlet Only</field>
    <field name="model_id" ref="model_cafe_batch"/>
    <field name="domain_force">[('outlet_id','in',user.coffee_outlet_ids.ids)]</field>
    <field name="groups" eval="[(4, ref('group_cafe_inventory_user'))]"/>
  </record>


</odoo>
