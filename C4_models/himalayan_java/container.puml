@startuml CafeERP_Container
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml


Person(user_hq, "HQ Manager / Warehouse", "Uses Odoo Web UI")
Person(user_outlet, "Outlet Manager", "Uses Odoo Web UI or mobile POS")


System_Boundary(cafe_erp, "Cafe ERP (Supply Chain)"){
Container(web_ui, "Odoo Web UI", "React/HTML (browser)", "User interface for managers and staff")
Container(app_server, "Odoo Server", "Python (Odoo)", "Business logic: stock, purchase, mrp, quality, maintenance, custom modules")
ContainerDb(db, "PostgreSQL", "Relational DB", "Persistent storage for Odoo")
Container(scheduler, "Scheduler / Cron", "Odoo scheduled actions", "Automated reorder, MO planning")
}


Container_Ext(supplier_portal, "Supplier Portal / Email", "External", "Receives POs and sends ASF/ASN")
Container_Ext(bi_tool, "Reporting / BI", "Business Intelligence", "Optional: advanced analytics")


Rel(user_hq, web_ui, "Use")
Rel(user_outlet, web_ui, "Use")
Rel(web_ui, app_server, "JSON / XML RPC (HTTP)")
Rel(app_server, db, "SQL")
Rel(app_server, scheduler, "Schedule tasks & cron jobs")
Rel(app_server, supplier_portal, "Send POs / Receive confirmations")
Rel(app_server, bi_tool, "Export data / push reports")


@enduml