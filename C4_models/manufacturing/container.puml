@startuml cafe_container_diagram
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(admin, "Admin User", "Manages production")

System_Boundary(odoo, "Odoo Caf√© Management Platform") {

  Container(web, "Odoo Web Client", "HTML/JS", "Used by staff/admins via browser")
  Container(server, "Odoo Server", "Python", "Handles business logic and modules")
  ContainerDb(db, "PostgreSQL Database", "SQL", "Stores data for all modules")

  Container(cafe_pos, "Cafe POS Module", "Python/Odoo", "Handles orders and table management")
  Container(cafe_inventory, "Cafe Inventory Module", "Python/Odoo", "Manages ingredient stock")
  Container(cafe_mrp, "Cafe Manufacturing Module", "Python/Odoo", "Handles production of food/drinks")
}

Rel(admin, web, "Uses", "HTTPS")
Rel(web, server, "Sends requests to")
Rel(server, db, "Reads/Writes to", "ODBC")

Rel(server, cafe_pos, "Uses")
Rel(server, cafe_inventory, "Uses")
Rel(server, cafe_mrp, "Uses")

Rel(cafe_mrp, cafe_inventory, "Consumes ingredients from")

@enduml
