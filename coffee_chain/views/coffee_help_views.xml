<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- About Coffee Outlet Module -->
    <record id="view_coffee_help_about" model="ir.ui.view">
      <field name="name">coffee.help.about.form</field>
      <field name="model">coffee.help</field>
      <field name="arch" type="xml">
        <form string="About Coffee Outlet Module" create="false" edit="false" delete="false" nolabel="1">
          <sheet>
            <h2 style="color:#673AB7; font-weight:bold; font-size:28px; margin-bottom:15px; border-bottom:2px solid #673AB7; padding-bottom:8px;">About Coffee Outlet Module</h2>
            <div style="font-size:16px; line-height:1.7; color:#2C3E50;">
              This module allows you to manage Coffee Outlets. Each outlet stores information such as the <b>Outlet Name</b>, <b>Location</b>, <b>Manager</b>, and <b>Regional Manager</b>. 
              You can also link the outlet to a <b>Customer</b> (the organization that owns the outlet) and automatically create a related CRM opportunity for follow-up. 
              <br/><br/>
              In summary:
              <ul>
                <li>Create and manage coffee outlets efficiently.</li>
                <li>Link outlets to the owning customer.</li>
                <li>Automatically generate CRM opportunities for new outlets.</li>
              </ul>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_coffee_help_about" model="ir.actions.act_window">
      <field name="name">About Coffee Outlet Module</field>
      <field name="res_model">coffee.help</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_coffee_help_about"/>
      <field name="target">current</field>
    </record>

    <!-- How to Use Coffee Outlet Module -->
    <record id="view_coffee_help_how_to_use" model="ir.ui.view">
      <field name="name">coffee.help.how.to.use.form</field>
      <field name="model">coffee.help</field>
      <field name="arch" type="xml">
        <form string="How to Use Coffee Outlet Module" create="false" edit="false" delete="false" nolabel="1">
          <sheet>
            <h2 style="color:#673AB7; font-weight:bold; font-size:28px; margin-bottom:15px; border-bottom:2px solid #673AB7; padding-bottom:8px;">How to Use Coffee Outlet Module</h2>
            <div style="font-size:16px; line-height:1.7; color:#2C3E50;">
              <ol>
                <li>Go to <b>Outlets</b> under the Coffee Chain menu.</li>
                <li>Click <b>New</b> to add a new outlet.</li>
                <li>Fill in the <b>Outlet Name</b>, <b>Location</b>, <b>Manager</b>, and <b>Regional Manager</b>.</li>
                <li>Select the <b>Customer</b> field. This customer represents the <b>organization that owns all the multiple outlets</b> being created.</li>
                <li>Save the outlet. A CRM opportunity will be automatically generated for tracking purposes.</li>
              </ol>
              <br/>
              <b>Note:</b> Ensure that the Customer selected is the owning organization, so multiple outlets can be linked properly.
              <br/><br/>
              <div style="text-align:center; margin-top:20px;">
                <img src="/coffee_chain/static/src/img/coffee_outlet_form.png" style="max-width:100%; border-radius:6px;" alt="Coffee Outlet Form Screenshot"/>
              </div>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_coffee_help_how_to_use" model="ir.actions.act_window">
      <field name="name">How to Use Coffee Outlet Module</field>
      <field name="res_model">coffee.help</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_coffee_help_how_to_use"/>
      <field name="target">current</field>
    </record>

    <!-- C4 Diagram -->
    <record id="view_coffee_help_c4" model="ir.ui.view">
      <field name="name">coffee.help.c4.form</field>
      <field name="model">coffee.help</field>
      <field name="arch" type="xml">
        <form string="Coffee Outlet C4 Diagram" create="false" edit="false" delete="false" nolabel="1">
          <sheet>
            <h2 style="color:#673AB7; font-weight:bold; font-size:28px; margin-bottom:15px; border-bottom:2px solid #673AB7; padding-bottom:8px;">C4 Diagram of Coffee Outlet Module</h2>
            <div style="text-align:center; margin-top:20px;">
              <img src="/coffee_chain/static/src/img/coffee_outlet_c4.png" style="max-width:100%; border-radius:6px;" alt="C4 Diagram"/>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_coffee_help_c4" model="ir.actions.act_window">
      <field name="name">C4 Diagram</field>
      <field name="res_model">coffee.help</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_coffee_help_c4"/>
      <field name="target">current</field>
    </record>

    <!-- Help Menu -->
    <menuitem id="coffee_chain_help_root" name="Help" parent="coffee_chain_root" sequence="10"/>
    <menuitem id="coffee_help_about_module" name="About the Module" parent="coffee_chain_help_root" action="action_coffee_help_about" sequence="1"/>
    <menuitem id="coffee_help_how_to_use" name="How to Use It" parent="coffee_chain_help_root" action="action_coffee_help_how_to_use" sequence="2"/>
    <menuitem id="coffee_help_c4_diagrams" name="C4 Diagram" parent="coffee_chain_help_root" action="action_coffee_help_c4" sequence="3"/>

  </data>
</odoo>
