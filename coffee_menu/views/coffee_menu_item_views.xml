<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_coffee_menu_item_form" model="ir.ui.view">
        <field name="name">coffee.menu.item.form</field>
        <field name="model">coffee.menu.item</field>
        <field name="arch" type="xml">
            <form string="Coffee Menu Item">
                <sheet>
                    <group>
                        <field name="image" widget="image"/>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="category"/>
                        <field name="status"/>
                    </group>

                    <notebook>
                        <page string="Details">
                            <field name="description" widget="text" placeholder="Write extra details here..."/>
                        </page>
                    </notebook>

                    <group string="Customization Options" col="4">
                        <field name="milk_type"/>
                        <field name="size"/>
                        <field name="syrup_flavor"/>
                        <field name="extra_shot"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_coffee_menu_item_list" model="ir.ui.view">
        <field name="name">coffee.menu.item.list</field>
        <field name="model">coffee.menu.item</field>
        <field name="arch" type="xml">
            <list string="Coffee Menu Items">
                <field name="name"/>
                <field name="price"/>
                <field name="category"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_coffee_menu_item_kanban" model="ir.ui.view">
        <field name="name">coffee.menu.item.kanban</field>
        <field name="model">coffee.menu.item</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="price"/>
                <field name="image"/><!-- required for prefetching -->
                <templates>
                     <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <!-- let Odoo render the image correctly regardless of format -->
                                <field name="image" widget="image" options="{'preview_image': 'image'}"/>
                            </div>
                            <strong><field name="name"/></strong>
                            <div><field name="price"/></div>
                            
                        </div>
                     </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="action_coffee_menu_item" model="ir.actions.act_window">
        <field name="name">Coffee Menu Items</field>
        <field name="res_model">coffee.menu.item</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="coffee_menu_root" name="Coffee Menu"/>
    <menuitem id="coffee_menu_item_menu" name="Items" parent="coffee_menu_root" action="action_coffee_menu_item"/>
</odoo>
